<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txtPreguntaId"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/txtPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="abrirPregunta"
        android:textSize="75px"
        app:layout_constraintStart_toEndOf="@+id/txtPreguntaId"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pregunta" />

    <TextView
        android:id="@+id/txtRespuesta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35px"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/txtPreguntaId"
        app:layout_constraintTop_toBottomOf="@id/txtPregunta"
        tools:text="Respuesta1" />

    <TextView
        android:id="@+id/txtRespuesta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35px"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/txtPreguntaId"
        app:layout_constraintTop_toBottomOf="@id/txtRespuesta1"
        tools:text="Respuesta2" />

    <TextView
        android:id="@+id/txtRespuesta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35px"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/txtPreguntaId"
        app:layout_constraintTop_toBottomOf="@id/txtRespuesta2"
        tools:text="Respuesta3" />

    <TextView
        android:id="@+id/txtRespuesta4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35px"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/txtPreguntaId"
        app:layout_constraintTop_toBottomOf="@id/txtRespuesta3"
        tools:text="Respuesta4" />
</androidx.constraintlayout.widget.ConstraintLayout>